}

.box {
  width: 200rpx;
  height: 300rpx;
  margin: 50px auto;
  border-radius: 10rpx;
  perspective: 200;
  -webkit-perspective: 200;
  transform-style: preserve-3d;
}

.elem {
  width: 100%;
  height: 100%;
  transform: rotateY(30deg);
}

